@model MvcFPTBook.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img
                                src="~/Uploads/@Html.DisplayFor(model => model.Poster)"
                                style="width: 100%; height:300px" /></div>
                    </div>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Html.DisplayFor(model => model.Name)</h3>
                    <h6 class="price">Category: <span>@Html.DisplayFor(model => model.Category.Name)</span></h6>
                    <h6 class="price">Author: <span>@Html.DisplayFor(model => model.Author.Name)</span></h6>
                    <h6 class="price">Publisher: <span>@Html.DisplayFor(model => model.Publishers.Name)</span></h6>
                    <h5 class="price">current price: <span>$@Html.DisplayFor(model => model.Price)</span></h5>
                    <div class="action">
                        <form asp-controller="Books" asp-action="AddTicket" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="name" value="@Model.Name" />
                            <input type="hidden" name="price" value="@Model.Price" />
                            <input type="number" name="quantity" min=1 value=1 />
                            <button class="add-to-cart btn btn-default" type="submit" value="Add To Cart"> Add To Cart
                            </button>
                        </form>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
